<%- include('../layouts/headerM.ejs') %>
<%- include('../layouts/navigationM.ejs') %>


<!-- PARALLAX BANNER -->
<div class="breadcrumb parallax-container">
  <% pages.forEach(page => {
    if(page.firstSlug == 'shop') { %>
      <div class="parallax"><img src="/images/pages/<%= page.firstSlug %>/<%= page.banner %>" alt="<%= page.banner %>"></div>
    <% }
  }); %>
  <h1 class="category-title"><%= title %></h1>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/products">Products</a></li>
    <li><a href="/brands">All Brands</a></li>
  </ul>
</div>
<!-- End of PARALLAX BANNER -->



<!-- BELLOW BANNER CONTENT -->
<main class="container">
  <div class="row">

    <div class="content col-sm-12">

      <!-- FLASH MESSAGES -->
      <%- include('../layouts/flashMessages.ejs') %>

      <h2>Search products by brand</h2>

      <br>

      <% if(brands.length > 0) { %>
        <!--  TABLE  -->
        <table class="table table-striped sorting">
          <thead>
            <tr class="home">
              <th class="text-center">NAME</th>
              <th class="text-center">IMAGE</th>
              <th class="text-center">No. of PRODUCTS in SHOP</th>
            </tr>
          </thead>
          <tbody class="reorder">
            <% brands.forEach(brand => { %>
              <tr id="id_<%= brand._id %>" class="<%= brand.slug %>" style="font-size: 14px;">
                <td><a href="/brands/<%= brand.slug %>"><%= brand.title %></a></td>
                <td class="text-center">
                  <% if(!brand.image) { %>
                    <img src="/images/brands/noimage.png" style="max-height: 35px; max-width: 200px;">
                  <% } else { %>
                    <a href="/brands/<%=brand.slug %>"><img src="/images/brands/<%= brand.firstSlug %>/<%= brand.image %>" style="max-height: 35px; max-width: 200px;"></a>
                  <% } %>
                </td>
                <td class="text-center"><%= brand.numOfProds %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <!--  End of TABLE  -->

        <br><br>
        <!-- PAGINATION -->
			  <%- include('../layouts/paginationM.ejs') %>

      <% } else { %>
        <br>
        <h3 class="category-title">No brands found</h3>
      <% } %>

    </div>
  </div>
</main>
<!-- End of BELOW BANNER CONTENT -->


<%- include('../layouts/footerM.ejs') %>
